<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/turismo"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.danielgarcia.practica4.Turismo">

    <Button
        android:onClick="charcos"
        android:id="@+id/charcos"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:background="@drawable/madera"
        android:text="Charcos"
        android:textColor="@color/darkorange"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="museo"
        android:id="@+id/museo"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:background="@drawable/madera"
        android:text="Museo"
        android:textColor="@color/darkorange"
        android:textSize="25sp"
        android:layout_alignTop="@+id/charcos"
        android:layout_alignLeft="@+id/locomotora"
        android:layout_alignStart="@+id/locomotora" />

    <Button
        android:onClick="motorrodillo"
        android:id="@+id/motorrodillo"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:background="@drawable/madera"
        android:text="Motorrodillo"
        android:textColor="@color/darkorange"
        android:textSize="25sp"
        android:layout_below="@+id/charcos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="locomotora"
        android:id="@+id/locomotora"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:background="@drawable/madera"
        android:text="Locomotora"
        android:textColor="@color/darkorange"
        android:textSize="25sp"
        android:layout_below="@+id/museo"
        android:layout_alignRight="@+id/infocisnerosBoton"
        android:layout_alignEnd="@+id/infocisnerosBoton" />

    <Button
        android:onClick="infocisnerosBoton"
        android:id="@+id/infocisnerosBoton"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:background="@drawable/madera"
        android:text="InformaciÃ³n turistica"
        android:textColor="@color/darkorange"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/regresarT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/regresar"
        android:onClick="volverT"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>